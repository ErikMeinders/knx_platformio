{
  "name": "knx_platformio",
  "version": "0.1.0",
  "description": "A comprehensive platform for building KNX applications for ESP8266/ESP32 devices with advanced networking, OTA updates, and monitoring capabilities",
  "keywords": [
    "knx",
    "esp8266",
    "esp32",
    "platformio",
    "home-automation",
    "iot"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ErikMeinders/knx_platformio.git"
  },
  "authors": [
    {
      "name": "Erik Meinders",
      "email": "erik@easytocloud.com",
      "maintainer": true
    }
  ],
  "license": "MIT",
  "frameworks": "arduino",
  "platforms": [
    "espressif8266",
    "espressif32"
  ],
  "export": {
    "include": [
      "src/knxp_*",
      "include/knxp_*",
      "library.json",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests",
      "cicd",
      ".pio*"
    ]
  },
  "dependencies": {
    "profiler": "erikmeinders/profiler@^0.7.4",
    "ArduinoLog": "thijse/ArduinoLog@^1.1.1",
    "TelnetStream": "jandrassy/TelnetStream@^1.3.0",
    "knx": "https://github.com/thelsing/knx.git",
    "WiFiManager": "https://github.com/tzapu/WiFiManager.git"
  },
  "build": {
    "libArchive": false,
    "flags": [
      "-I$PROJECT_DIR/include"
    ]
  },
  "examples": [
    "examples/*"
  ]
}
